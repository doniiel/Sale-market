<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="6-1" author="daniyal">
        <createIndex tableName="categories" indexName="idx_category_name">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <changeSet id="6-2" author="daniyal">
        <createIndex tableName="payments" indexName="idx_payment_order_id">
            <column name="order_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="6-3" author="daniyal">
        <createIndex tableName="products" indexName="idx_product_name">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <changeSet id="6-4" author="daniyal">
        <createIndex tableName="products" indexName="idx_product_category_id">
            <column name="category_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="6-5" author="daniyal">
        <createIndex tableName="users" indexName="idx_user_username">
            <column name="username"/>
        </createIndex>
    </changeSet>

    <changeSet id="6-6" author="daniyal">
        <createIndex tableName="roles" indexName="idx_role_name">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <changeSet id="6-7" author="daniyal">
        <createIndex tableName="refresh_tokens" indexName="idx_refresh_token_token">
            <column name="token"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
