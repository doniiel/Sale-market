<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1-add-roles" author="daniyal">
        <insert tableName="roles">
            <column name="id" valueSequenceNext="role_seq_gen"/>
            <column name="name" value="ROLE_ADMIN"/>
            <column name="created_date" valueDate="NOW()"/>
            <column name="updated_date" valueDate="NOW()"/>
        </insert>

        <insert tableName="roles">
            <column name="id" valueSequenceNext="role_seq_gen"/>
            <column name="name" value="ROLE_USER"/>
            <column name="created_date" valueDate="NOW()"/>
            <column name="updated_date" valueDate="NOW()"/>
        </insert>
    </changeSet>

    <changeSet id="2-add-admin-user" author="daniyal">
        <insert tableName="users">
            <column name="id" valueSequenceNext="user_seq_gen"/>
            <column name="username" value="admin"/>
            <column name="password" value="$2a$12$jlEV5z/yO0EPhhTs3pAI2e17NZ5d2/1.d/xCjHcdPwGQilFLyy1WC"/>
            <column name="email" value="admin@example.com"/>
            <column name="phone" value="+77000000000"/>
            <column name="bio" value="System administrator"/>
            <column name="created_date" valueDate="NOW()"/>
            <column name="updated_date" valueDate="NOW()"/>
        </insert>

    </changeSet>

    <changeSet id="3-assign-role-to-admin" author="daniyal">
        <insert tableName="user_roles">
            <column name="user_id" valueComputed="(SELECT id FROM users WHERE username='admin')"/>
            <column name="role_id" valueComputed="(SELECT id FROM roles WHERE name='ROLE_ADMIN')"/>
        </insert>
    </changeSet>

</databaseChangeLog>
